# Environment Configuration
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/doctor_assistant
DATABASE_URL_SYNC=postgresql://postgres:password@localhost:5432/doctor_assistant

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Mistral AI (Free tier - get key at https://console.mistral.ai/)
MISTRAL_API_KEY=your-mistral-api-key

# Google Calendar & Gmail
GOOGLE_CREDENTIALS_FILE=credentials.json
GOOGLE_TOKEN_FILE=token.json

# SendGrid (alternative to Gmail)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-bot-token

# App Settings
APP_NAME=Doctor Appointment Assistant
DEBUG=true
